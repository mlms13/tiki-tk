// Colors
// --------------------------------

$primary                 = #1999b3
$success                 = #28bd35
$warning                 = #e68d19
$danger                  = #e62719

$black                   = #000
$gray-darkest            = #222
$gray-darker             = #333
$gray-dark               = #444
$gray                    = #888
$gray-lighter            = #bbb
$gray-lightest           = #eee
$white                   = #fff

$body-bg                 = $white
$text-color              = $gray-darker
$hr-border-color         = rgba(0,0,0,0.1)



// Spacing
// --------------------------------

$spacer                  = 1rem
$default-margin-bottom   = $spacer
$half-margin-bottom      = ($spacer / 2)
$double-margin-bottom    = ($spacer * 2)



// Fonts and sizes
// --------------------------------

// families (from Bootstrap 4)
$font-family-sans-serif  = -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", Arial, sans-serif
$font-family-serif       = Georgia, "Times New Roman", Times, serif
$font-family-monospace   = Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace
$font-family-base        = $font-family-sans-serif

// sizes and weights
$line-height-base        = 1.4
$font-size-base          = 16px



// Links
// --------------------------------

$link-color              = $primary
$link-decoration         = none
$link-hover-color        = lighten($link-color, 10%)
$link-hover-decoration   = underline



// Headings
// --------------------------------

$heading-color           = inherit
$heading-font-family     = inherit
$heading-font-weight     = 500
$heading-line-height     = 1.1

$heading-1-size          = 2.5rem
$heading-2-size          = 2rem
$heading-3-size          = 1.75rem
$heading-4-size          = 1.5rem
$heading-5-size          = 1.25rem
$heading-6-size          = 1rem



// Misc defaults
// --------------------------------

$border-radius           = 3px
$border-width            = 1px
$box-shadow              = 1px 1px 1px rgba(0,0,0,0.15)

$cursor-disabled         = not-allowed



// Buttons
// --------------------------------

$btn-font-weight         = normal
$btn-line-height         = 1.25
$btn-border-width        = $border-width
$btn-border-radius       = $border-radius
$btn-box-shadow          = $box-shadow

$btn-padding-x           = 1rem
$btn-padding-y           = 0.5rem

$btn-default-bg          = $gray-lightest
$btn-default-color       = $gray-dark
